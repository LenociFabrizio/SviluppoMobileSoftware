<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout_luogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
    android:descendantFocusability="blocksDescendants"
    tools:context=".LuogoDiInteresse.MostraLuogoDiInteresseActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true" >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true"
                app:contentScrim="?android:colorPrimary"
                android:id="@+id/collapsing_toolbarQuiz"
                app:toolbarId="@id/toolbar_luogodiinteresse">


                <ImageView
                    android:id="@+id/immagine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:contentDescription="immagine"
                    app:layout_collapseMode="parallax"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_risultatoQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/secondary_top_menu"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="60dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/classificaText"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="140dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="@string/classifica"
                    android:textSize="30sp" />

                <ListView
                    android:id="@+id/lista_classifica"
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/classificaText"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="75dp"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="80dp"
                    app:layout_constraintTop_toBottomOf="@+id/classificaText"
                    tools:layout_editor_absoluteY="266dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/risultatoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lista_classifica"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="250dp"
                    android:layout_marginTop="10dp"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/esitoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lista_classifica"
                    android:layout_marginHorizontal="120dp"
                    android:text="@string/punteggio"
                    android:textSize="24sp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/tryAgainBtn"
                    android:layout_width="250dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/risultatoText"
                    android:background="@drawable/rounded_button_quiz_game"

                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="80dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/riprova" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>