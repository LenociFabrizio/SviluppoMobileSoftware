<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_percorso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Percorso.MostraPercorsoActivity"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/inside_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginTop="24dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/descrizione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/nome" />

            <TextView
                android:id="@+id/durata"
                android:background="@drawable/round_content"
                android:layout_width="wrap_content"

                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descrizione"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="@dimen/text_margin"
                app:layout_constraintTop_toBottomOf="@+id/descrizione" />

            <ListView
                android:id="@+id/lista_oggetti"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/durata"

                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/durata" />


        </RelativeLayout>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/avviaPercorsoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:contentDescription="Avvia percorso"
        android:text="@string/avviaPercorso"
        android:theme="@style/Theme.MyApplication3.FloatingButton">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="@color/dark_grey"
        app:itemTextColor="@color/icons_color"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />


</androidx.constraintlayout.widget.ConstraintLayout>