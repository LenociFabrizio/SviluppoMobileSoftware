<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_percorso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Percorso.MostraPercorso"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_percorso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/nome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_percorso"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/descrizione"
        android:layout_below="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/durata"
        android:layout_below="@+id/descrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>


    <Button
        android:id="@+id/btn_avvia_percorso"
        android:layout_below="@+id/durata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Avvia Percorso" />

    <ListView
        android:id="@+id/lista_oggetti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/durata"
        android:layout_marginTop="16dp"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="@color/dark_grey"
        app:itemTextColor="@color/icons_color"
        app:menu="@menu/bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:labelVisibilityMode="selected"
        />



</RelativeLayout>