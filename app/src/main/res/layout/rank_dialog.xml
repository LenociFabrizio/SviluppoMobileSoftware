<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:padding="8dp">

    <TextView
        android:id="@+id/titleRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="16dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBarDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:clickable="true"
        android:isIndicator="false"
        android:numStars="5"
        android:progressTint="@color/black"
        android:rating="0"
        android:layout_gravity="center"
        android:stepSize="0.5"
        android:layout_marginHorizontal="16dp"
        tools:ignore="SpeakableTextPresentCheck"
        android:progressBackgroundTint="@color/light_grey"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rank_dialog_button"
        style="@style/Theme.ECultureExperience.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:contentDescription="Conferma"
        android:gravity="center"
        android:text="Conferma"
        android:textAlignment="center"
         />


</LinearLayout>