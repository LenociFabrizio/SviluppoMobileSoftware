<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <!-- Base application theme. NoActionBar -->
    <style name="Theme.MyApplication3" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_50</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/grey_50</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gov_blue</item>
    </style>

    <style name="Theme.MyApplication3.Inside" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_50</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gov_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>


    <style name="Theme.ECultureExperience.Button.TextButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

</resources>