<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ECultureExperience" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="android:windowLightStatusBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_50</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/grey_50</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/golden</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gov_blue</item>


        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>


    </style>

    <style name="Theme.ECultureExperience.NoActionBar" parent="Theme.ECultureExperience">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ECultureExperience.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ECultureExperience.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

</resources>